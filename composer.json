{
	"name": "neuron-php/orm",
	"description": "Lightweight ORM with attribute-based relations for Neuron-PHP framework",
	"type": "library",
	"license": "MIT",
	"keywords": ["orm", "relations", "active-record", "php8", "attributes"],
	"authors": [
		{
			"name": "Lee Jones",
			"email": "lee@dragonflyrg.com"
		}
	],
	"require": {
		"php": "^8.4",
		"ext-pdo": "*",
		"neuron-php/core": "0.8.*",
		"neuron-php/data": "0.9.*"
	},
	"require-dev": {
		"phpunit/phpunit": "9.*"
	},
	"autoload": {
		"psr-4": {
			"Neuron\\Orm\\": "src/Orm/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
